          <LocalizedString ElementType="Predicate" ElementId="Number" StringId="HelpText">un nÃºmero.</LocalizedString>
          <LocalizedString ElementType="PredicateValidation" ElementId="CustomValidation" StringId="CharacterClasses">El nombre del departamento debe de tener al menos dos de los siguientes:</LocalizedString>
          <LocalizedString ElementType="GetLocalizedStringsTransformationClaimType" StringId="email_subject">CÃ³digo de verificaciÃ³n de correo electrÃ³nico de cuenta empresarial</LocalizedString>
          <LocalizedString ElementType="GetLocalizedStringsTransformationClaimType" StringId="email_message">Â¡Gracias por verificar tu cuenta!</LocalizedString>
